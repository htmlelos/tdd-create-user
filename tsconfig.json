{
  "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "rootDir": "./",
      "sourceMap": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "noImplicitAny": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["*"]
      }
  },
  "include": [
      "src/**/*.ts",
      "__test__/**/*"
  ],
  "exclude": ["node_modules"]
}